rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNÇÕES AUXILIARES ---
    function isLoggedIn() {
      return request.auth != null;
    }

    function isOwner(fieldId) {
      return isLoggedIn() && request.auth.uid == resource.data[fieldId];
    }

    function willBeOwner(fieldId) {
      return isLoggedIn() && request.auth.uid == request.resource.data[fieldId];
    }
    
    function isAdmin() {
      return isLoggedIn() && 
             get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.role == "admin";
    }

    function isViewIncrement() {
        // Permite apenas incrementar o campo 'views' em exatas 1 unidade
        return request.resource.data.diff(resource.data).affectedKeys().hasOnly(['views'])
               && request.resource.data.views == resource.data.views + 1;
    }

    // ==========================================================
    // 1. USUÁRIOS
    // ==========================================================
    match /usuarios/{userId} {
      allow read: if true;
      
      // CRIAÇÃO: O próprio usuário pode criar seu documento ao logar
      // CORREÇÃO DE SEGURANÇA: Validar campos na criação para impedir injeção de privilégios
      allow create: if isLoggedIn() && request.auth.uid == userId
                    && request.resource.data.keys().hasOnly(['uid', 'nome', 'email', 'avatar', 'createdAt'])
                    && request.resource.data.uid == userId;
      
      // ATUALIZAÇÃO SEGURA (ALLOWLIST):
      // O usuário SÓ pode editar os campos listados abaixo.
      // Campos sensíveis como 'coins', 'subscriptionStatus', 'role', 'badges' são bloqueados.
      allow update: if isAdmin() ||
                    (
                      isLoggedIn() 
                      && request.auth.uid == userId 
                      && request.resource.data.diff(resource.data).affectedKeys()
                         .hasOnly(['nome', 'foto', 'capa', 'bio', 'website', 'twitter', 'instagram', 'patreon', 'paypal'])
                    );
    }
    
    // ==========================================================
    // 2. OBRAS
    // ==========================================================
    match /obras/{obraId} {
      allow read: if true;
      allow create: if willBeOwner('autorId');
      
      // Admin pode deletar ou O Dono pode deletar
      allow delete: if isAdmin() || isOwner('autorId');
      
      // Admin pode atualizar (para banir/ocultar) OU Dono pode atualizar OU Incremento de visualização
      allow update: if isAdmin() || isOwner('autorId') || (isLoggedIn() && isViewIncrement());
    }

    // ==========================================================
    // 3. CAPÍTULOS
    // ==========================================================
    match /capitulos/{capId} {
      allow read: if true;
      allow create: if willBeOwner('autorId');
      
      // Admin tem permissão total para moderar
      allow delete: if isAdmin() || isOwner('autorId'); 
      allow update: if isAdmin() || isOwner('autorId');
    }

    // ==========================================================
    // 4. REPORTS
    // ==========================================================
    match /reports/{reportId} {
      allow create: if isLoggedIn();
      allow read, update, delete: if isAdmin();
    }

    // ==========================================================
    // 5. REVIEWS
    // ==========================================================
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isLoggedIn(); 
      allow delete: if isLoggedIn() && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // ==========================================================
    // 6. HISTÓRICO
    // ==========================================================
    match /historico/{docId} { 
       allow read, write: if isLoggedIn() && docId.matches(request.auth.uid + "_.*");
    }

    // ==========================================================
    // 7. ANÚNCIOS
    // ==========================================================
    match /anuncios/{anuncioId} {
      allow read: if true;
      allow create: if isLoggedIn();
      // Admin pode apagar anúncios impróprios, Dono pode editar
      allow update, delete: if isAdmin() || (isLoggedIn() && request.auth.uid == resource.data.userId);
    }

    // ==========================================================
    // 8. TRANSAÇÕES (NOVO - CRÍTICO PARA MONETIZAÇÃO)
    // ==========================================================
    match /transactions/{tId} {
      // Usuário vê as suas próprias transações, Admin vê tudo.
      // Ninguém pode criar ou editar manualmente (apenas via Cloud Functions).
      allow read: if isAdmin() || (isLoggedIn() && resource.data.userId == request.auth.uid);
      allow write: if false; 
    }

    // ==========================================================
    // OUTRAS COLEÇÕES
    // ==========================================================
    match /comentarios/{docId} { 
      allow read: if true;
      allow create: if isLoggedIn() && request.resource.data.autorId == request.auth.uid;
      allow delete: if isAdmin() || (isLoggedIn() && request.auth.uid == resource.data.autorId);
      allow update: if false; // Comentários não são editáveis por design
    }
    
    // Notificações: Apenas o destinatário pode ler/marcar como lida.
    match /notificacoes/{docId} { 
      allow read, update, delete: if isLoggedIn() && resource.data.paraId == request.auth.uid;
      allow create: if isLoggedIn(); // Sistema ou usuários podem criar notificações
    }
    
    // Biblioteca: Apenas o dono da biblioteca pode ver/editar
    match /biblioteca/{docId} { 
      allow list: if isLoggedIn() && resource.data.userId == request.auth.uid;
      allow get: if isLoggedIn() && resource.data.userId == request.auth.uid;
      allow create: if isLoggedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isLoggedIn() && resource.data.userId == request.auth.uid;
    }
    
    // Avaliações
    match /avaliacoes/{docId} { 
      allow read: if true;
      allow write: if isLoggedIn() && (request.resource.data.userId == request.auth.uid || resource.data.userId == request.auth.uid);
    } 
    
    // Seguidores
    match /seguidores/{docId} { 
      allow read: if true;
      // Criação: Apenas se eu sou o "follower"
      allow create: if isLoggedIn() && request.resource.data.followerId == request.auth.uid;
      // Exclusão: Se eu sou o follower (unfollow) ou o followed (remover seguidor)
      allow delete: if isLoggedIn() && (resource.data.followerId == request.auth.uid || resource.data.followedId == request.auth.uid);
    }
    
    match /visualizacoes_capitulos/{docId} { 
        allow create: if isLoggedIn();
        allow read: if isLoggedIn() && resource.data.userId == request.auth.uid;
    }
    
    match /stats/{docId} { 
      allow read: if true;
      allow write: if false; // Apenas servidor (Functions) ou Admin via console direto
    }

    // ==========================================================
    // 9. HISTÓRIAS INTERATIVAS (BRANCHING STORIES)
    // ==========================================================
    match /historias_interativas/{historiaId} {
      // Qualquer um pode ler histórias publicadas; autor pode ler suas próprias rascunhos
      allow read: if resource.data.status == 'public'
                  || (isLoggedIn() && resource.data.autorId == request.auth.uid)
                  || isAdmin();

      // Autor cria a história com seu próprio ID
      allow create: if willBeOwner('autorId');

      // Apenas autor ou admin podem atualizar/deletar
      allow update, delete: if isOwner('autorId') || isAdmin();
    }
  }
}
