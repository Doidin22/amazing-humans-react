rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNÇÕES AUXILIARES ---
    function isLoggedIn() {
      return request.auth != null;
    }

    function isOwner(fieldId) {
      return isLoggedIn() && request.auth.uid == resource.data[fieldId];
    }

    function willBeOwner(fieldId) {
      return isLoggedIn() && request.auth.uid == request.resource.data[fieldId];
    }
    
    function isAdmin() {
      return isLoggedIn() && 
             get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.role == "admin";
    }

    // --- REGRAS ---

    // 1. USUÁRIOS
    match /usuarios/{userId} {
      allow read: if true;
      allow update: if isLoggedIn() && request.auth.uid == userId 
                    && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'saldoInterno']);
      allow create: if isLoggedIn() && request.auth.uid == userId;
    }
    
    // 2. OBRAS (LIVROS)
    match /obras/{obraId} {
      allow read: if true;
      allow create: if willBeOwner('autorId');
      allow delete: if isOwner('autorId') || isAdmin(); 
      allow update: if isOwner('autorId');
    }

    // 3. CAPÍTULOS
    match /capitulos/{capId} {
      allow read: if true;
      allow create: if willBeOwner('autorId');
      allow delete: if isOwner('autorId') || isAdmin(); 
      allow update: if isOwner('autorId');
    }

    // 4. REPORTS (DENÚNCIAS)
    match /reports/{reportId} {
      allow create: if isLoggedIn();
      allow read, update, delete: if isAdmin();
    }

    // 5. REVIEWS (NOVA REGRA CORRIGIDA)
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isLoggedIn(); // Permite criar se estiver logado
      // Permite deletar se for dono do review OU admin
      allow delete: if isLoggedIn() && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Outras coleções
    match /comentarios/{docId} { allow read: if true; allow write: if isLoggedIn(); }
    match /historico/{docId} { allow read, write: if isLoggedIn() && request.auth.uid == resource.data.userId; }
    match /notificacoes/{docId} { allow read, write: if isLoggedIn(); }
    match /biblioteca/{docId} { allow read, write: if isLoggedIn(); }
    match /avaliacoes/{docId} { allow read, write: if isLoggedIn(); } // (Para o rating antigo, se ainda usar)
    match /seguidores/{docId} { allow read, write: if isLoggedIn(); }
    match /visualizacoes_capitulos/{docId} { allow read, write: if isLoggedIn(); }
  }
}