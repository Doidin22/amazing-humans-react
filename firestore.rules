rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---
    function isLoggedIn() {
      return request.auth != null;
    }

    function isOwner(fieldId) {
      return isLoggedIn() && request.auth.uid == resource.data[fieldId];
    }

    function willBeOwner(fieldId) {
      return isLoggedIn() && request.auth.uid == request.resource.data[fieldId];
    }

    // --- RULES ---

    // 1. USERS (Allow profile edits, but BLOCK balance/read count updates from client)
    match /usuarios/{userId} {
      allow read: if true;
      allow update: if isLoggedIn() && request.auth.uid == userId 
                    && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['saldoInterno', 'contador_leituras']);
      allow create: if isLoggedIn() && request.auth.uid == userId;
    }
    
    // 2. USER STATUS
    match /status_usuario/{userId} {
      allow read, write, delete: if isLoggedIn() && request.auth.uid == userId;
    }

    // 3. BOOKS (Block view/rating updates from client, must be server-side)
    match /obras/{obraId} {
      allow read: if resource.data.status == 'public' || isOwner('autorId');
      allow create: if willBeOwner('autorId');
      allow delete: if isOwner('autorId');
      allow update: if isOwner('autorId') 
                    && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['views', 'rating', 'votes']);
    }

    // 4. CHAPTERS
    match /capitulos/{capId} {
      allow read: if true;
      allow create: if willBeOwner('autorId');
      allow delete: if isOwner('autorId');
      allow update: if isOwner('autorId') 
                    && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['views']);
    }

    // 5. VIEWS (Block WRITE from client entirely, only Cloud Functions can write here)
    match /visualizacoes_capitulos/{docId} {
       allow read: if isLoggedIn() && (resource == null || resource.data.userId == request.auth.uid);
       allow write: if false; 
    }

    // 6. COMMENTS
    match /comentarios/{comId} {
      allow read: if true;
      allow create: if willBeOwner('autorId');
      allow delete: if isOwner('autorId');
      allow update: if isLoggedIn() 
                    && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes']);
    }

    // 7. RATINGS
    match /avaliacoes/{docId} {
      allow read: if true;
      allow write, delete: if isLoggedIn() && request.resource.data.userId == request.auth.uid;
    }

    // 8. LIBRARY
    match /biblioteca/{docId} {
      allow read: if isLoggedIn() && (resource == null || resource.data.userId == request.auth.uid);
      allow write: if isLoggedIn() && request.resource.data.userId == request.auth.uid;
      allow delete: if isLoggedIn() && resource.data.userId == request.auth.uid;
    }
    
    // 9. HISTORY
    match /historico/{docId} {
      allow read: if isLoggedIn() && (resource == null || resource.data.userId == request.auth.uid);
      allow write: if isLoggedIn() && request.resource.data.userId == request.auth.uid;
      allow delete: if isLoggedIn() && resource.data.userId == request.auth.uid;
    }

    // 10. FOLLOWERS
    match /seguidores/{docId} {
      allow read: if true;
      allow create, update: if isLoggedIn() && request.resource.data.seguidorId == request.auth.uid;
      allow delete: if isLoggedIn() && (resource.data.seguidorId == request.auth.uid || resource.data.seguidoId == request.auth.uid);
    }

    // 11. NOTIFICATIONS
    match /notificacoes/{notifId} {
      allow read: if isLoggedIn() && resource.data.paraId == request.auth.uid;
      allow create: if isLoggedIn();
      allow update: if isLoggedIn() && resource.data.paraId == request.auth.uid;
      allow delete: if isLoggedIn() && resource.data.paraId == request.auth.uid;
    }
  }
}